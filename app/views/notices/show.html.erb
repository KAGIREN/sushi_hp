<div class="container-fluid background-image2">
  <div class="row">
    <h2 style="text-align: center;"><span class="border">お知らせ詳細</span></h2>
    <div class="col-xs-2"></div>
      <div class="col-xs-8" style="padding-top: 20px;">
        <p class="notice-font3"><%= @notice.created_at.strftime("%Y/%m/%d")%></P>
        <p class="notice-font4"><%= @notice.title %></p>
        <div class="col-xs-5" style="text-align: right;">
          <span><%= attachment_image_tag @notice, :image, :fill,150,150, fallback: "no_image.jpg", size:'200x200'%></span>
        </div>
        <div class="col-xs-7">
          <h4 class="notice-font5"><%= @notice.content %></h4>
        </div>
      </div>
    <div class = "col-xs-2"></div>
  </div>
  <div class="row">
    <div class = "col-xs-6 notice-link2">
      <% if @notice.previous.present? %>
        <%= link_to notice_path(@notice.previous.id), class: 'notice-link4' do %>
          <%= "<<　" + @notice.previous.title + "　|" %>
        <% end %>
      <% end %>
    </div>
    <div class = "col-xs-6 notice-link3">
      <% if @notice.next.present? %>
        <%= link_to notice_path(@notice.next), class: 'notice-link4' do %>
          <%= "|　" + @notice.next.title + "　>>"  %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>