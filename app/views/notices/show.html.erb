<div class="container-fluid background-image2">
  <div class="row">
    <h2 class="notice-font3"><span class="border">お知らせ詳細</span></h2>
    <div class="col-xs-0 col-lg-3"></div>
      <div class="col-xs-12 col-lg-6">
        <h3 style="text-align: center;"><%= @notice.created_at.strftime("%Y/%m/%d")%></h3>
        <h1 class="notice-font4"><%= @notice.title %></h1>
        <div class="col-xs-12 col-lg-5" style="text-align: right;">
          <span><%= attachment_image_tag @notice, :image, :fill,150,150, fallback: "no_image.jpg", class: 'notice-image-resp'%></span>
        </div>
        <div class="col-xs-12 col-lg-7">
          <h4 class="notice-font5"><%= @notice.content %></h4>
        </div>
      </div>
    <div class = "col-xs-0 col-lg-3"></div>
  </div>
  <div class="row">
    <div class = "col-xs-6 col-lg-6 notice-link2">
      <% if @notice.previous.present? %>
        <%= link_to notice_path(@notice.previous.id), class: 'notice-link4' do %>
          <%= "<<　" + @notice.previous.title + "　|" %>
        <% end %>
      <% end %>
    </div>
    <div class = "col-xs-6 col-lg-6 notice-link3">
      <% if @notice.next.present? %>
        <%= link_to notice_path(@notice.next), class: 'notice-link4' do %>
          <%= "|　" + @notice.next.title + "　>>"  %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>