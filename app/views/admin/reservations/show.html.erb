<div class="container-fluid background-image2">
	<div class="row">
	    <h2 class="reservation-title"><span class="border">予約詳細</span></h2>
	    <div class="col-xs-4"></div>
	      	<div class="col-xs-4"style="padding-bottom:20px;">
		        <table class="table reservation-table">
					<tbody>
						<tr>
							<th width="40%">予約日時</th>
							<td width="60%"><%= @reservation.reservation_day.strftime("%Y/%m/%d") %></td>
						</tr>
						<tr>
							<th>予約時間</th>
							<td><%= @reservation.reservation_time %></td>
						</tr>
						<tr>
							<th>予約人数</th>
							<td><%= @reservation.people %>人</td>
						</tr>
						<tr>
							<th>名前</th>
							<td><%= @reservation.customer_name + "様" %></td>
						</tr>
						<tr>
							<th>電話番号</th>
							<td><%= @reservation.phone_number %></td>
						</tr>
						<tr>
							<th>メールアドレス</th>
							<td><%= @reservation.email %></td>
						</tr>
						<tr>
							<th>ご要望</th>
							<td class="reservation-request"><%= @reservation.request %></td>
						</tr>
					</tbody>
				</table>
				<div class="btn-group btn-group-justified" >
		            <div class="btn-group">
		              <%= link_to edit_admin_reservation_path(@reservation.id) do %>
		                <button class="btn btn-warning">編集する</button>
		              <% end %>
		            </div>
		            <div class="btn-group">
		              <%= link_to admin_reservations_path do %>
		                <button class="btn btn-default">一覧に戻る</button>
		              <% end %>
		            </div>
		            <div class="btn-group">
		              <%= link_to admin_reservation_path(@reservation.id), method: :delete, data: {confirm: 'キャンセルしますか？'} do %>
	                    <button class="btn btn-danger">キャンセルする</button>
	                <% end %>
		            </div>
		        </div>
		    </div>
	    <div class="col-xs-4"></div>
	</div>
</div>