<div class= "container">
  <div class ="row">
    <h2 class = text-center>お知らせ投稿</h2>
    <div class = "col-xs-2"></div>
      <div class = "col-xs-8">
      <%= form_for(@notice, url:admin_notices_path) do |f| %>
        <% if @notice.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(notice.errors.count, "error") %> prohibited this notice from being saved:</h2>
            <ul>
              <% notice.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
        <div class = "col-xs-4">
          <h4>画像</h4>
          <!-- 投稿画像がある場合とない場合とで表示を分岐 -->
          <% if @notice.image.present? %>
            <%= image_tag @notice.image, id: :img_prev, size:'200x200' %>
          <% else %>
            <%= image_tag "no_image.jpg", id: :img_prev, size:'200x200' %>
          <% end %>
          <!-- 投稿画像を選択した時に、投稿画像を読み込み＆反映 -->
          <script type="text/javascript">
            $(function(){
              function readURL(input){
                if(input.files && input.files[0]){
                  var reader = new FileReader();
                  reader.onload = function(e){
                    $('#img_prev').attr('src',e.target.result);
                  }
                  reader.readAsDataURL(input.files[0]);
                }
              }
              $("#notice_img").change(function(){
                readURL(this);
              });
            });
          </script>
          <div class="field row">
            <%= f.attachment_field :image, id: :notice_img %>
          </div>
        </div>
        <div class = "col-xs-8">
          <div class="field row">
            <h4>タイトル</h4>
            <%= f.text_field :title,style: "width:90%; color: black;"%>
          </div>
          <div class="field row">
            <h4>内容</h4>
            <%= f.text_area :content,style: "width:90%; color: black;",rows:"10"%>
          </div>
          <div class="actions row">
            <%= f.submit "投稿する", class: "btn btn-primary" %>
          </div>
        <% end %>
        </div>
      </div>
    <div class = "col-xs-2"></div>
  </div>
</div>